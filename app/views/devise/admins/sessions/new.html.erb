<div class="container">
  <div class="row">
    <h2 class="text-center">管理者ログイン</h2>
  </div>
  <%= render "devise/users/shared/error_messages", resource: resource %>

  <!-- メールアドレス・パスワードを直接入力してログインブロック -->
  <div class="admin-signin-form-all col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group row">
      <%= f.label :email, 'メールアドレス', class: "col-md-3 col-md-offset-2 col-xs-offset-1" %>
      <div class="col-md-5 col-xs-10 col-xs-offset-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, 'パスワード', class: "col-md-3 col-md-offset-2 col-xs-offset-1" %>
      <div class="col-md-5 col-xs-10 col-xs-offset-1">
        <%= f.password_field :password, placeholder: "6文字以上で入力してください", autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "col-xs-6 col-xs-offset-3 signin-button" %>
    </div>
    <% end %>
  </div>
</div>
