<div class="container">
  <div class="row">
    <h2 class="text-center">ログイン</h2>
  </div>

  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, id: "flash_#{name}", class: "error text-center" %>
  <%- end -%>

  <!-- メールアドレス・パスワードを直接入力してログインブロック -->
  <div class="row">
    <div class="signin-form-all col-md-5 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group row">
          <%= f.label :email, class: "col-md-4 col-md-offset-2 col-xs-offset-1" %>
          <div class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-md-4 col-md-offset-2 col-xs-offset-1" %>
          <div class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
            <%= f.password_field :password, placeholder: "6文字以上で入力してください", autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <% if devise_mapping.rememberable? %>
            <div class="field col-md-offset-6 col-xs-offset-4">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, 'ログイン情報を記憶する' %>
            </div>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "col-xs-6 col-xs-offset-3 signin-button" %>
        </div>
        <div class="signup-or-password text-center">
          <%= render "devise/users/shared/links" %>
        </div>
      <% end %>
    </div>

  <!-- SNSアカウントでログインブロック -->
    <div class="signin-sns-box col-md-4 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1 ">
      <h4 class="text-center">SNSアカウントでログイン</h4>
      <%= link_to user_facebook_omniauth_authorize_path do %>
        <div class="facebook-box">
          <div class="facebook-box-icon"><%= icon('fab', 'facebook-f fa-3x') %></div>
          <p class="facebook-box-text">Facebookでログイン</p>
        </div>
      <% end %>
      <%= link_to user_google_oauth2_omniauth_authorize_path do%>
        <div class="google-box">
          <div class="google-box-icon"><%= icon('fab', 'google fa-3x') %></div>
          <p class="google-box-text">Googleでログイン</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

