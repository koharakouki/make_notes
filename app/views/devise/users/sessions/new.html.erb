<div class="container">
  <div class="row">
    <h2 class="col-xs-4 col-xs-offset-1">ログイン</h2>
  </div>
  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, id: "flash_#{name}", class: "error text-center" %>
  <%- end -%>

  <!-- メールアドレス・パスワードを直接入力してログインブロック -->
  <div class="row">
    <div class="signin-form-all col-xs-5 col-xs-offset-1 ">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%#= render "devise/users/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <%= f.label :email, class: "col-xs-4 col-xs-offset-1" %>
          <div class="col-xs-6">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-xs-4 col-xs-offset-1" %>
          <div class="col-xs-6">
            <%= f.password_field :password, placeholder: "6文字以上で入力してください", autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "col-xs-4 col-xs-offset-4 signin-button" %>
        </div>
        <div class="signup-or-password">
          <%= render "devise/users/shared/links" %>
        </div>
      <% end %>
    </div>

  <!-- SNSアカウントでログインブロック -->
    <div class="signin-sns-box col-xs-4 col-xs-offset-1 ">
      <h4 class="text-center">SNSアカウントでログインする</h4>
       <div class="facebook-box">
        <div class="facebook-box-icon"><%= icon('fab', 'facebook-f fa-3x') %></div>
        <p class="facebook-box-text">facebookでログイン</p>
       </div>
       <div class="twitter-box">
        <div class="twitter-box-icon"><%= icon('fab', 'twitter fa-3x') %></div>
        <p class="twitter-box-text">twitterでログイン</p>
       </div>
    </div>
  </div>
</div>
