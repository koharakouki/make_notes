<div class="recomend-users hidden-md hidden-sm hidden-xs">
	<span class="recomend-users-headline">おすすめユーザー</span>
	<% rank_users.first(8).each do |user| %>
		<div class="recomend-user">
			<div class="recomend-user-img">
				<%= attachment_image_tag(user, :image, :fill, 50, 50, fallback: "no_image_mini.png", size: "50x50") %>
			</div>
			<div class="recomend-user-name">
				<%= link_to user_genres_path(user) do %>
					<%= user.name %>
				<% end %>
			</div>
			<div class="recomend-user-follower">
				<%= link_to followers_user_path(user) do %>
					<strong><%= user.followers.count %></strong> follower
				<% end %>
			</div>
		</div>
	<% end %>
</div>



