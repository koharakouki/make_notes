<% user ||= current_user %>
<div class="stats">
  <a href="<%= show_follow_user_path(user) %>">
    <strong id="following" class="stat">
      <%= user.following.count %>
    </strong>
    <span>フォロー</span>
  </a>
  <a href="<%= show_follow_user_path(user) %>">
    <strong id="followers" class="stat">
      <%= user.followers.count %>
    </strong>
    <span>フォロワー</span>
  </a>
</div>