<div class="container-fluid">
	<div class="row">

		<!-- user-infoの表示 -->
		<div class="col-md-3">
			<%= render 'shared/user_info', user: current_user %>
		</div>

		<!-- 記事作成ブロックの表示 -->
		<div class="col-md-8">
      <%= render "shared/error_messages", object: @article %>

			<div class="new-article-headline row">
				<h3 class="text-center">記事を書く</h3>
			</div>

			<div class="new-article-body col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
				<%= form_for(@article) do |f| %>

          <div class="form-group row">
            <%= f.label :article_title, '記事タイトル' %>
            <%= f.text_field :article_title, placeholder: "35文字以内", class: "form-control" %>
          </div>

          <div class="form-group row">
            <label>ネタバレ（選択してください）</label>
            <%= f.radio_button :is_spoiler, true %>
            <%= f.label :is_spoiler, '有り', { value: true, style: 'display: inline-block;' } %>

            <%= f.radio_button :is_spoiler, false %>
            <%= f.label :is_spoiler, '無し', { value: false, style: 'display: inline-block;' } %>
          </div>

          <div class="form-group row">
            <%= f.label :content, '本文' %>
            <%= f.text_area :content, class: "form-control", size: "100x15" %>
          </div>

          <div class="actions col-xs-3 col-xs-offset-8 col-md-offset-10">
            <%= f.submit '投稿する', class: 'btn btn-primary' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>