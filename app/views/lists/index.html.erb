<div class="container-fluid">
	<div class="row">
		<!-- ユーザー情報の表示 -->
		<div class="col-md-3">
			<%= render 'shared/user_info', user: @user %>
		</div>

		<!-- マイリスト一覧の表示 -->
		<div class="col-md-9">
			<div class="list-index-headline">
				<h3><%= link_to "マイリスト＞", user_genres_path %>
					<% if @genre.present? %>
						<%= @genre.name %>
					<% else %>
						ALL
					<% end %>
				</h3>
			</div>

			<div class="list-index-body p-3">
				<!-- 観たいと観たをタブで切り替え -->
				<ul class="nav nav-tabs" role="tablist">
				    <li class="nav-item active">
				        <a href="#want-to" class="nav-link top-tabs" data-toggle="tab">観たい</a>
				    </li>
				    <li class="nav-item">
				        <a href="#done" class="nav-link top-tabs" data-toggle="tab">観た</a>
				    </li>
				</ul>

				<div class="tab-content">
					<div id="want-to" class="tab-pane fade active in">
						<!-- 観たいリストを表示 -->
						<div class="col-xs-10">
						   <%= render 'want_list' %>
					   </div>
					</div>
					<div id="done" class="tab-pane fade">
						<div class="col-xs-10">
							<!-- 観たリストを表示 -->
						   <%= render 'done_list' %>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>