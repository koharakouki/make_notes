<table class="table">
	<thead>
		<tr>
			<th>作品タイトル</th>
			<th>ジャンル</th>
			<th>メディア</th>
			<th>日時</th>
			<th colspan="2"></th>
		</tr>
	</thead>
	<tbody>
		<% lists.each do |list| %>
			<tr>
				<td><%= list.title %></td>
				<td><%= list.genre.name %></td>
				<td><%= list.media %></td>
				<td><%= list.start_time %></td>
				<td id="star-rate-<%= list.id %>">
					<script>
					$('#star-rate-<%= list.id %>').raty({
						size: 36,
						starOff:  '<%= asset_path('star-off.png') %>',
						starOn : '<%= asset_path('star-on.png') %>',
						starHalf: '<%= asset_path('star-half.png') %>',
						half: true,
						readOnly: true,
						score: <%= list.rate %>,
					});
					</script>
				</td>
				<td><%= link_to '削除', user_list_path(id: list.id), method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>

