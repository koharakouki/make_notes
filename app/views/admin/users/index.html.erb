<!-- 管理者側のユーザー一覧 -->
<div class="container-fluid">
<!-- 	<div class="row"> -->
		<div class="user-index ">
			<div class="user-index-headline row">
				<h3 class="col-md-offset-1">ユーザー一覧</h3>
			</div>
			<div class="row">
				<div class="search-form col-md-8">
					<%= search_form_for @q, url: admin_users_path do |f| %>
						<div class="form-group col-md-6 col-md-offset-1">
						  <%= f.search_field :name_cont, class: "form-control" %>
						</div>
						<div class="actions col-md-1 col-xs-2">
						  <%= f.submit "検索", class: "button is-info btn btn-primary" %>
						</div>
						<div class="col-md-2 col-xs-3">
							<%= link_to "CSV出力", admin_users_path(format: :csv), class: "btn btn-success" %>
						</div>
					<% end %>
				</div>
			</div>
			<div class="user-index-body">
				<% if @users.any? %>
					  <table class="table table-hover">
					  	<thead>
					  		<tr class="success">
					  			<th>ユーザー名</th>
					  			<th>メールアドレス</th>
					  			<th>プロバイダ</th>
					  			<th>フォロー数</th>
					  			<th>フォロワー数</th>
					  			<th>登録日時</th>
					  			<th>更新日時</th>
					  			<th>会員ステータス</th>
					  			<th colspan="1"></th>
					  		</tr>
					  	</thead>
					<% @users.each do |user| %>

					  	<tbody>
					  		<tr>
					  			<td class="text-left">
					  				<%= attachment_image_tag(user, :image, :fill, 40, 40, fallback: "no_image_mini.png", size: "40x40") %>
					  				<%= user.name %>
					  			</td>

					  			<td>
					  				<%= user.email %>
					  			</td>

					  			<td>
					  				<% if user.provider.present? %>
					  					<%= user.provider %>
					  				<% else %>
					  				  <p>未登録</p>
					  				<% end %>
					  			</td>

					  			<td>
					  				<strong><%= user.following.count %></strong> following
					  			</td>

									<td>
										<strong><%= user.followers.count %></strong> follower
									</td>

									<td>
										<%= user.created_at.strftime("%Y年%m月%d日") %>
									</td>

									<td>
										<%= user.updated_at.strftime("%Y年%m月%d日") %>
									</td>

									<td>
										<% if user.deleted_at.present? %>
											<p>退会済み</p>
										<% elsif user.deleted_at == nil %>
										  <p>有効</p>
										<% end %>
									</td>

									<td>
										<% if user != current_admin %>
											<%= link_to '退会', admin_user_path(user), class: "btn btn-danger", method: :delete, data: { confirm: '本当に削除しますか？' } %>
										<% end %>
									</td>
								</tr>
							</tbody>
					<% end %>
						</table>
				<% else %>
					<div class="col-md-offset-1">
						<h3>検索結果はありませんでした</h3>
					</div>
				<% end %>
			<%= paginate @users %>
			</div>
		</div>
<!-- 	</div> -->
</div>

