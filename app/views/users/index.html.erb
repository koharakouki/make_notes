<div class="container">
	<div class="row">
		<!-- user-infoの表示 -->
		<div class="col-md-3">
			<%= render 'shared/user_info', user: current_user %>
		</div>

		<!-- ユーザー一覧 -->
		<div class="col-md-7">
			<h4>ユーザーを探す</h4>
			<div class="search-form">
				<%= form_tag(search_path, :method => "get") do %>
					<!-- ユーザー検索か記事検索かを区別するためにmodel要素を渡す -->
					<%= hidden_field_tag :model, "user" %>

					<%= text_field_tag :search %>
					<%= submit_tag "検索" ,:name => nil ,class: "button is-info"%>
				<% end %>
			</div>
			<div class="user_index">
				<% @users.each do |user| %>
					<%= attachment_image_tag(user, :image, :fill, 50, 50, fallback: "no_image_mini.png") %>
					<%= link_to user_genres_path(user) do %>
						<%= user.name %>
					<% end %>
					<%= link_to show_follow_user_path(user) do %>
						<p>フォロー数: <%= user.following.count %></p>
					<% end %>
					<%= link_to show_follow_user_path(user) do %>
						<p>フォロワー数: <%= user.followers.count %></p>
					<% end %>
					<%= user.introduction %>
				<% end %>
			</div>
		</div>

		<!-- おすすめユーザー表示(もっと見るで下にいけるように) -->
		<div class="col-md-2">
		</div>
	</div>
</div>