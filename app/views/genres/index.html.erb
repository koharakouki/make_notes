<div class="container-fluid">
	<div class="row">
		<!-- user-infoの表示 -->
		<div class="col-xs-3">
			<%= render 'shared/user_info', user: @user %>
		</div>

		<!-- ジャンル一覧の表示 -->
		<div class="col-xs-6 genre-index">
			<!-- ajaxでジャンルを追加しているのでこのidでエラーメッセージを出す -->
			<div id="result"></div>
			<%= render 'genre_index' %>
		</div>

		<!-- 記事一覧の表示 -->
		<div class="col-xs-2">
			<%= render 'shared/article_box', articles: @articles %>
		</div>
	</div>
</div>